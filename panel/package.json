{
    "name": "formwork-panel",
    "description": "Formwork CMS Administration Panel",
    "author": "Giuseppe Criscione",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/getformwork/formwork.git"
    },
    "bugs": {
        "url": "https://github.com/getformwork/formwork/issues"
    },
    "scripts": {
        "build": "pnpm build:css && pnpm build:js",
        "build:css": "sass ./src/scss/panel.scss:./assets/css/panel.min.css --style=compressed --no-source-map",
        "build:js": "tsc && esbuild ./src/ts/app.ts --outfile=./assets/js/app.min.js --bundle --format=iife --global-name=Formwork --target=es6 --minify",
        "watch:css": "pnpm build:css --watch",
        "watch:js": "pnpm build:js --watch",
        "format": "pnpm format:css && pnpm format:ts",
        "format:css": "prettier './src/scss/**/*.scss' --write",
        "format:ts": "prettier './src/ts/**/*.ts' --write",
        "lint": "pnpm lint:css && pnpm lint:ts",
        "lint:css": "stylelint './src/scss/**/*.scss' --fix",
        "lint:ts": "eslint './src/ts/**/*.ts' --fix",
        "check": "pnpm check:css && pnpm check:ts",
        "check:css": "stylelint './src/scss/**/*.scss'",
        "check:ts": "eslint './src/ts/**/*.ts'"
    },
    "dependencies": {
        "@codemirror/commands": "^6.8.1",
        "@codemirror/lang-markdown": "^6.3.4",
        "@codemirror/language": "^6.11.3",
        "@codemirror/view": "^6.38.4",
        "@lezer/highlight": "^1.2.1",
        "chartist": "^1.5.0",
        "prosemirror-commands": "^1.7.1",
        "prosemirror-history": "^1.4.1",
        "prosemirror-inputrules": "^1.5.0",
        "prosemirror-keymap": "^1.2.3",
        "prosemirror-markdown": "^1.13.2",
        "prosemirror-model": "^1.25.3",
        "prosemirror-schema-list": "^1.5.1",
        "prosemirror-state": "^1.4.3",
        "prosemirror-view": "^1.41.2",
        "sortablejs": "^1.15.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/sortablejs": "^1.15.8",
        "esbuild": "^0.25.10",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.4.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "sass": "^1.93.2",
        "stylelint": "^16.24.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-scss": "^6.12.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
